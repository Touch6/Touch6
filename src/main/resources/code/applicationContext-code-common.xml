<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:error="http://www.heqmentor.com/schema/error"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.heqmentor.com/schema/error
                           http://www.heqmentor.com/schema/error/error.xsd">

    <!-- 异常代码配置  -->
    <bean id="eCode_comm" class="com.heqmentor.core.exception.ECode">
        <property name="errorMap">
            <!--suppress InjectionValueTypeInspection -->
            <map>
                <!--200100 手机验证异常start-->
                <entry key="mobile.already.registered">
                    <error:error code="200100" info="信息错误" des="该手机号已被注册，请更换手机号码重新注册"/>
                </entry>
                <entry key="mobile.incorrect">
                    <error:error code="200101" info="手机号码不正确" des="手机号不存在，请重新确认"/>
                </entry>
                <entry key="mobile.code.incorrect">
                    <error:error code="200102" info="手机验证码不正确" des="手机验证码错误，请重新获取后验证"/>
                </entry>
                <entry key="mobile.code.times.too.many">
                    <error:error code="200103" info="请求过于频繁" des="手机验证码1天内最多获取10次，请次日再试"/>
                </entry>
                <entry key="mobile.code.sms.gateway.error">
                    <error:error code="200104" info="短信网关错误" des="短信网关错误，请联系管理员"/>
                </entry>
                <entry key="mobile.code.expired">
                    <error:error code="200105" info="验证码过期" des="验证码验证时间超过15分钟，请重新获取"/>
                </entry>
                <entry key="mobile.code.too.frequent.60">
                    <error:error code="200106" info="请求过于频繁" des="请求过于频繁，1分钟内只能请求一次"/>
                </entry>
                <entry key="mobile.code.too.frequent.30">
                    <error:error code="200107" info="请求过于频繁" des="请求过于频繁，30分钟内最多请求10次"/>
                </entry>
                <entry key="mobile.code.too.frequent.24">
                    <error:error code="200108" info="请求过于频繁" des="请求过于频繁，1天内最多请求20次"/>
                </entry>
                <!--200100 手机验证异常end-->


                <!--500100 系统异常start-->
                <entry key="system.exception">
                    <error:error code="500100" info="系统异常" des="系统异常，请联系管理员"/>
                </entry>
                <!--500100 系统异常end-->
            </map>
        </property>
    </bean>
</beans>